    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
  
          <div class="d-flex justify-content-between align-items-center">
            <h2>Portfolio Details</h2>
            <ol>
              <li><a href="{{path('home')}}">Home</a></li>
              <li><a href="{{path('a-propos-peintre',{'id':peinture.user.id})}}">A propos </a></li>
              <li>Détails de la peinture</li>
            </ol>
          </div>
  
        </div>
      </section><!-- End Breadcrumbs -->
  
      <!-- ======= Portfolio Details Section ======= -->
      <section id="portfolio-details" class="portfolio-details">
        <div class="container">
  
          <div class="row gy-4">
  
            <div class="col-lg-8">
                <!-- selon qu'une ou  plusieurs photos sont attribuées à une même peinture, 
                    il faudra ajuster la table peinture et cette partie ultérieurement -->
              <div class="portfolio-details-slider swiper-container">
                <div class="swiper-wrapper align-items-center">
  
                  <div class="w-100">
                    <img src="{{peinture.file}}" alt="{{peinture.nom}}">
                  </div>
  
                  <!-- <div class="swiper-slide">
                    <img src="../../assets/img/portfolio/portfolio-details-2.jpg" alt="">
                  </div>
  
                  <div class="swiper-slide">
                    <img src="../../assets/img/portfolio/portfolio-details-3.jpg" alt="">
                  </div> -->
  
                </div>
                <div class="swiper-pagination"></div>
              </div>
            </div>
  
            <div class="col-lg-4">
              <div class="portfolio-info">
                <h3>{{peinture.nom}}</h3>
                <ul>
                  
                  <li><strong>Peintre</strong>: {{peinture.user.nom}}</li>
                  <li><strong>Date de réalisation</strong>: {{peinture.dateRealisation | date("m/d/Y")}}</li>
                  <li><strong>Largeur</strong>: {{peinture.largeur}} cm</li>
                  <li><strong>Largeur</strong>: {{peinture.hauteur}} cm</li>
                  {% if peinture.enVente == true %}                      
                  <li><strong>Prix de vente</strong>: {{peinture.prix}} €</li>
                  {% endif %}
                </ul>
              </div>
              <div class="portfolio-description">
                <h2>Description</h2>
                <p>
  {{peinture.description}}              </p>
              </div>
            </div>
  
          </div>
  
        </div>
      </section><!-- End Portfolio Details Section -->