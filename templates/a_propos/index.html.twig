<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio">
    <div class="container">

        <div class="section-title" data-aos="zoom-out">
            <h2>Portfolio</h2>
            <p>What we've done</p>
        </div>
        
        <ul id="portfolio-flters" class="d-flex justify-content-end" data-aos="fade-up">
            <li data-filter="*" class="filter-active">All</li>
            {% for peinture in user.peintures %}
            {% for categorie in peinture.categorie %}
            <li data-filter=".filter-{{categorie.nom}}">{{categorie.nom}}</li>            
            {% endfor %}
            {% endfor %}
            <!-- <li data-filter=".filter-app">App</li>
                <li data-filter=".filter-card">Card</li>
                <li data-filter=".filter-web">Web</li> -->
            </ul>
            
            {% for peinture in user.peintures %}
           
            <div class="row portfolio-container" data-aos="fade-up">
                
                <div class="col-lg-4 col-md-6 portfolio-item filter-{% for categorie in peinture.categorie %}{{categorie.nom}}{% endfor %}">
                    <div class="portfolio-img"><img src="{{peinture.file}}" class="img-fluid" alt=""></div>
                    <div class="portfolio-info">
                        
                        <h4>
                            {{peinture.nom}}
                            {% for categorie in peinture.categorie %}                            
                            <span class="text-white text-small">Cat : {{categorie.nom}}</span>
                            <!-- <a href="" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title=""><i class="bx bx-plus"></i></a> -->
