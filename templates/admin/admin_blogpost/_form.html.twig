<section>
    {{ form_start(form) }}
    <div class="admin-form bg-transparent">

        <div class="form-group my-3 w-50">
            {{ form_row(form.titre, {attr:{'class':'form-control'}}) }}
        </div>
        <div class="form-group my-3 w-75">
            {{ form_label (form.contenu) }}
            {{ form_widget(form.contenu, {attr:{'class': 'form-control'}}) }}
        </div>

        <button class="btn btn-warning mt-5">{{ button_label|default('Save') }}</button>
    </div>
    {{ form_end(form) }}
</section>